rule "AirHorn"
when
    Item AirHorn changed
then
	val results = executeCommandLine("sudo@@/usr/bin/omxplayer@@-o@@local@@/etc/openhab2/sounds/AirHorn.mp3",5000)
    logInfo("Exec",results)
end

